@model BaoChi.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Index">Quản lý danh mục</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Create">Thêm mới</a></li>
    </ol>
    <h6 class="slim-pagetitle">Danh mục</h6>
</div>

<hr />


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mg-b-25">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Tên danh mục</label>
                        <input asp-for="CatName" class="form-control" />
                        <span asp-validation-for="CatName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Danh mục cha</label>
                        <select class="form-control select2" asp-for="Parents" asp-items="@ViewBag.DanhMucGoc">
                            <option value="0" selected>Danh mục gốc:</option>
                        </select>
                        <span asp-validation-for="Parents" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Thứ tự sắp xếp</label>
                        <input type="number" min="1" asp-for="Ordering" class="form-control" />
                        <span asp-validation-for="Ordering" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Mô tả</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">MetaDesc</label>
                        <input asp-for="MetaDesc" class="form-control" />
                        <span asp-validation-for="MetaDesc" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">MetaKey</label>
                        <input asp-for="MetaKey" class="form-control" />
                        <span asp-validation-for="MetaKey" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="control-label">Ảnh đại diện</label>
                        <input type="file" asp-for="Thumb" class="form-control" />
                        <span asp-validation-for="Thumb" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Icon</label>
                        <input type="file" asp-for="Icon" class="form-control" />
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Cover</label>
                        <input type="file" asp-for="Cover" class="form-control" />
                        <span asp-validation-for="Cover" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Published"/>Active
                        </label>
                    </div>
                </div>
               
            </div>
            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Xác nhận</button>
                <button class="btn btn-secondary bd-0" asp-area="Admin" asp-controller="Categories" asp-action="Index">Trở về</button>
            </div><!-- form-layout-footer -->
        </form>
    </div>
</div>
