@model BaoChi.Models.Role

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quản lý quyền truy cập</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Details">Thông tin </a>@Model.RoleName</li>
    </ol>
    <h6 class="slim-pagetitle">Quyền truy cập</h6>
</div>

<hr />

<div class="section-wrapper mg-t-20">

    <form asp-area="Admin" asp-controller="Roles" asp-action="Details">
        <input type="hidden" asp-for="RoleId" />
        <div class="form-layout form-layout-7">
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Tên quyền:
                </div>
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="text" asp-for="RoleName" disabled>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-5 col-sm-4">
                    Mô tả:
                </div><!-- col-4 -->
                <div class="col-7 col-sm-8">
                    <input class="form-control" type="text" asp-for="RoleDescription" disabled>
                </div>
            </div>


        </div><!-- form-layout -->
        @*mg-t-10: 10 là độ cách xa phía trên*@
        <div class="form-layout-footer mg-t-10">
            <button class="btn btn-secondary bd-0" asp-area="Admin" asp-controller="Roles" asp-action="Index">Trở về</button>
        </div>
    </form>


</div>