@model IEnumerable<BaoChi.Models.Role>

@{
    ViewData["Title"] = "Quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quản lý quyền truy cập</a></li>
    </ol>
    <h6 class="slim-pagetitle">Quyền truy cập</h6>
</div>

<p>
    <a asp-action="Create" class="btn btn-oblong btn-success">Create New</a>
</p>
<div class="section-wrapper">

    <div class="table-responsive">
        <table class="table mg-b-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Role Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoleId</td>
                        <td>@item.RoleName</td>
                        <td>@item.RoleDescription</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-oblong btn-secondary">Details</a>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-oblong btn-primary">Edit</a>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-oblong btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- table-responsive -->
</div>
