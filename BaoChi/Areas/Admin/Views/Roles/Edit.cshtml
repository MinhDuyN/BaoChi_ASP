@model BaoChi.Models.Role

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@*Copy hết từ Create qua xong, chỉnh thêm asp-route-id vào*@

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quản lý quyền truy cập</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Edit">Chỉnh sửa </a>@Model.RoleName</li>
    </ol>
    <h6 class="slim-pagetitle">Quyền truy cập</h6>
</div>

<hr />


<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@Model.RoleId" method="POST">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RoleId" />
        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">Tên quyền: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" placeholder="Nhập tên quyền" asp-for="RoleName">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label">Mô tả: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" placeholder="Nhập mô tả" asp-for="RoleDescription">
                    </div>
                </div><!-- col-4 -->
            </div><!-- row -->
            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Xác nhận thay đổi</button>
                <button class="btn btn-secondary bd-0" asp-area="Admin" asp-controller="Roles" asp-action="Index">Trở về</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div>